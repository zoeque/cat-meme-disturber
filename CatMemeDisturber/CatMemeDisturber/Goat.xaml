<Window x:Class="CatMemeDisturber.Goat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatMemeDisturber"
        mc:Ignorable="d"
        Title="Goat"
        Width="800" Height="600" Background="Transparent"
		AllowsTransparency="True"
		WindowStyle="None"
        ShowInTaskbar="False"
		Topmost="True"
		WindowState="Maximized">
    <Grid x:Name="OperationArea"
          MouseLeftButtonDown="OperationArea_MouseLeftButtonDown"
          MouseLeftButtonUp="OperationArea_MouseLeftButtonUp"
          MouseMove="OperationArea_MouseMove">
        <Image gif:ImageBehavior.AnimatedSource="resources/goat.gif"
           gif:ImageBehavior.AutoStart="True"/>
    </Grid>
</Window>
