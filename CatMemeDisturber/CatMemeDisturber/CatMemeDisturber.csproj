<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="resources\goat.gif" />
    <None Remove="resources\happy-cat.gif" />
    <None Remove="resources\maxwell-cat.gif" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="resources\goat.gif" />
    <Resource Include="resources\happy-cat.gif" />
    <Resource Include="resources\maxwell-cat.gif" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="WpfAnimatedGif" Version="2.0.2" />
  </ItemGroup>

</Project>
