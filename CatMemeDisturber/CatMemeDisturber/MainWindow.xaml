                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.674"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.388"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Maxwell" HorizontalAlignment="Center" Margin="0,83,0,92" Width="128" RenderTransformOrigin="0.5,0.5" Click="Maxwell_Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.674"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.388"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
